{
  "manifest_version": 3,
  "name": "LinkedIn Company Analyzer",
  "version": "1.0",
  "description": "Analyze LinkedIn companies using local AI Service",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["marked.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Company"
  }
}
